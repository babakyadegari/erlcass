{pre_hooks, [{"(linux|darwin)", compile, "make nif_compile CPP_DRIVER_REV=bbbbd7bc3eaba1b10ad8ac6f53c41fa93ee718db"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make nif_clean"}]}.

{project_plugins, [rebar3_hex]}.

{deps, [
    {lager, "3.6.9"}
]}.

{erl_opts, [
    warnings_as_errors,
    warn_export_all,
    {parse_transform, lager_transform}
]}.

{ct_opts, [
    {sys_config, ["./benchmarks/benchmark.config"]}
]}.

{profiles, [
    {test, [
        {erl_opts, [
            debug_info,
            nowarn_export_all
        ]}
    ]}
]}.
